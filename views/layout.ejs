<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Lir</title>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/css/styles.css">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
</head>
<body>
  <nav class="navbar navbar-expand-lg bg-secondary navbar-light ">
      <a class="navbar-brand" href="/dashboard">Lir</a>
      <div class="navbar-nav ml-auto">
      <% if( typeof user != 'undefined' ) {%>
          <a href="#" class="nav-item nav-link">
            <i class="fas fa-xs fa-user"></i>
            <%= user.name %></a>
        <% if(user.isAdmin){ %>
          <a class="nav-item nav-link " href="/admin">
            <i class="fas fa-xs fa-lock"></i> Admin
          </a>
        <% } %>
        <a href="/users/logout" class="nav-item nav-link">Logout</a>
      <% } else {%>
          <a href="#" class="nav-item nav-link">Login</a>
      <% }%>
      </div>
  </nav>
  <div class="container-fluid">
    <%- body %>
  </div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
