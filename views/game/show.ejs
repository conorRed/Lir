<div class="row">
  <div class="col-sm-3 ">
    <div class="card fixed-card">
      <h3>Details</h3>
      <p><strong>Title: </strong><%= game.title %></p>
      <p><strong>Home: </strong><%= game.home.name %></p>
      <p><strong>Away: </strong><%= game.away.name %></p>
      <p><strong>Venue: </strong><%= game.venue %></p>
    </div>
    <div class="card links-card">
      <ul>
        <li><a href="#" id="export"><i class="fas fa-download"></i>Export</a></li>
      </ul>
    </div>
  </div>
  <div class="col-sm-6">
    <div id="passes" class="card">
      <div class="text-center border-bottom">
          <h2>Passes <a class="btn btn-primary" data-toggle="modal"
          href="#addPass" data-target="#addPass">
              <i class="fas fa-plus"></i>
            </a>
          <h2>
      </div>
      <% include ../partials/events/pass %>
    </div>
  </div>
  <div class="col">
  </div>
</div>
  <!-- Add event Modal -->
  <div class="modal fade" id="addPass" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add Pass</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <% include ../partials/addPass %>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary" form="event-list-add-form">Add</button>
          </div>
        </div>
      </div>
    </div>
  </div>

<script type="text/javascript" src="/js/events.js"></script>
